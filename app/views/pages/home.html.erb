<div class="fixed">
  <%= render 'shared/navbar' %>
</div>

<video id="background-video" autoplay loop muted src="https://ak.picdn.net/shutterstock/videos/1074629120/preview/stock-footage-wide-behind-the-scenes-cinematographer-shooting-viral-video-for-social-account-on-a-large-moon.webm" type="video/mp4" style="background-color: none !important">
</video>

<div class="container-fuild">
    <div class="col-12 text-center my-auto" >
      <h1 class="white d-block d-sm-block" style="font-size: 3.5rem; padding-top: 2.5em;">Le réseau des artistes <br>et professionnels du spectacle</h1>
    </div>
  <div class="role col-12" style='margin-bottom: 9rem;' >
