<div class="container filterbar" style="margin-bottom: 15px;">
  <div data-controller="toggle" class="py-1 shadow" style="background: transparent;backdrop-filter: blur(40px);border: 1px solid white;cursor: pointer; border-radius: 10px;">
    <div data-action="click->toggle#toggle touch->toggle#toggle" class="d-flex" style="align-items: center; justify-content: space-between;">
      <p style="margin-left: 10px;margin-bottom: 0;">Filtres</p>
      <i data-toggle-target="caret" class="fa-solid fa-caret-down" aria-hidden="true" style="margin-right: 10px;"></i>
    </div>
    <div data-toggle-target="toggleable" class="hidden container" >

      <div class="container gauche" style="display: flex;flex-direction: row;justify-content: space-evenly;">
        <%= link_to "?query=Homme", style: 'display: flex;align-items: center;flex-direction: column;' do %>
          <i class="fa-solid fa-mars" style="font-size: 30px;"></i>Homme
        <% end %>
        <%= link_to "?query=Femme", style: 'display: flex;align-items: center;flex-direction: column;' do %>
        <i class="fa-solid fa-venus" style="font-size: 30px;"></i>Femme
        <% end %>
        <%= link_to "/", style: 'display: flex;align-items: center;flex-direction: column;' do %>
        <i class="fa-solid fa-venus-mars" style="font-size: 30px;"></i>Les deux
        <% end %>
      </div>
      <div style="display: flex; flex-wrap: wrap;justify-content: space-evenly;" data-controller="filtre" class="">
        <%= form_with url: root_path, method: :get, class: "d-flex", id: 'find' do %>
          <%= text_field_tag :query,
                        params[:query],
                        class: "form-control",
                        placeholder: "Recherche par département" %>
          <%= submit_tag "Search", class: "btn btn-primary" %>
        <% end %>
      </div>
    </div>
  </div>
  <p style="margin-bottom: 0px;margin-left: 10px;"><small>Résultas : <%= @jobs.count %> / <%= Job.all.where("date >= ?", Time.now).count %></small></p>
</div>

<script>
  var localpath = window.location.pathname;
</script>
