                                        'aria-expanded': false %>
          <% else %>
            <img src="https://img.icons8.com/officel/344/circled-user-male-skin-type-6.png" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4))" class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false"/>
          <% end %>
          <i data-toggle-target="caret" class="fa-solid fa-caret-down" aria-hidden="true" style="margin-right: 10px;"></i>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
              <%= link_to "Trouver un Job", '/job', class: "dropdown-item" %>
              <%= link_to "Mon Profil", "/", class: "dropdown-item" %>
