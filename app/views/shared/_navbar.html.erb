                <%= link_to "Mes Mensurations", "/mensurations", class: "dropdown-item" %>
              <% end %>
              <%= link_to "Se DÃ©connecter" , destroy_user_session_path , class: "dropdown-item", data: {turbo_method: :delete} %>
            </div>
          </li>
        <% else %>
          <li class="nav-item" >
            <%= link_to "Se connecter", user_session_path, class: "nav-link" %>
            <%= link_to "C'est parti", role_path, class: "btn btn-secondary nav-link" %>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
