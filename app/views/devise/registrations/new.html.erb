<div style="height: 100vh;">
  <div class="container" style="display: flex;justify-content: center;align-items: center;">
    <h2>Créer un compte</h2>
    <br><br><br><br><br><br><br><br><br><br>
  </div>

  <div class="container" style="width: 80%;">
    <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), data: { turbo: :false }) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">

        <%= f.input :prenom,
                    label: false,
                    required: true,
                    autofocus: true,
                    placeholder: "Entrez votre prénom",
                    input_html: { autocomplete: "prenom" } %>
        <%= f.input :nom,
                    label: false,
                    required: true,
                    autofocus: true,
                    placeholder: "Entrez votre nom",
                    input_html: { autocomplete: "nom" } %>
        <%= f.input :email,
                    label: false,
                    required: true,
                    autofocus: true,
                    placeholder: "Entrez votre email",
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    label: false,
                    placeholder: "Entrez votre mot de passe",
                    hint: ("#{@minimum_password_length} characters minimum" if @minimum_password_length),
                    input_html: { autocomplete: "new-password" } %>
        <%= f.input :password_confirmation,
                    required: true,
                    label: false,
                    placeholder: "Confirmez votre mot de passe",
                    input_html: { autocomplete: "new-password" } %>
      </div>

      <div class="form-actions" style="display: flex;justify-content: center;">
        <%= f.button :submit, "Valider", class: 'button' %>
      </div>
    <% end %>
    <hr>
  </div>
  <br>
  <div style="display: flex;justify-content: center;text-align: center;">
    <small> Vous avez un compte ? <%= render "devise/shared/links" %></small>
  </div>
  <%= link_to 'Home', root_path %>
</div>
